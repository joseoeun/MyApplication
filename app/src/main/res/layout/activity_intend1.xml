<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intend1">
    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">

    <ImageView android:layout_height="0dp" android:layout_width="match_parent" tools:ignore="ContentDescription" app:srcCompat="@drawable/m3" android:scaleType="fitXY" android:layout_weight="1.2" android:id="@+id/imageView3"/>

    <ImageView android:layout_height="0dp" android:layout_width="wrap_content" tools:ignore="ContentDescription" app:srcCompat="@drawable/p51" android:layout_weight="3" android:id="@+id/imageView4" android:background="@android:color/background_light"/>


    <LinearLayout android:layout_height="0dp" android:layout_width="match_parent" android:orientation="horizontal" android:layout_weight="2">

    <ImageView android:layout_height="wrap_content" android:layout_width="0dp" tools:ignore="ContentDescription" app:srcCompat="@drawable/a51" android:layout_weight="5" android:id="@+id/imageView5" android:background="@android:color/background_light"/>

    <ImageButton android:layout_height="wrap_content" android:layout_width="0dp" app:srcCompat="@drawable/answersound" android:scaleType="fitCenter" android:layout_weight="1" android:id="@+id/imageButton14" android:background="@android:color/background_light"/>

</LinearLayout>

    <ImageButton android:layout_height="0dp" android:layout_width="match_parent" tools:ignore="ContentDescription" app:srcCompat="@drawable/match" android:scaleType="fitCenter" android:layout_weight="1" android:id="@+id/imageButton8" android:background="@android:color/white"/>

    <ImageView android:layout_height="0dp" android:layout_width="match_parent" tools:ignore="ContentDescription" app:srcCompat="@android:color/background_light" android:scaleType="fitCenter" android:layout_weight="2" android:id="@+id/imageView6" android:background="@android:color/background_light"/>


    <LinearLayout android:layout_height="0dp" android:layout_width="match_parent" android:orientation="horizontal" android:layout_weight="1">

    <ImageButton android:layout_height="wrap_content" android:layout_width="0dp" tools:ignore="ContentDescription" app:srcCompat="@drawable/toselect" android:scaleType="fitXY" android:layout_weight="5" android:id="@+id/toselectButton" android:background="@android:color/white"/>

    <ImageButton android:layout_height="wrap_content" android:layout_width="0dp" tools:ignore="ContentDescription" app:srcCompat="@drawable/okay" android:scaleType="fitXY" android:layout_weight="2" android:id="@+id/okayButton" android:background="@android:color/background_light"/>

</LinearLayout>

</LinearLayout>
</android.support.constraint.ConstraintLayout>